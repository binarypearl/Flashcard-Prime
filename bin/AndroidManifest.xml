                android:targetSdkVersion="1" />
      <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" >
        <activity android:name="HomeScreenActivity"
		android:label="@string/home_screen_label"
		android:screenOrientation="portrait"
		android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    	</activity>

        <activity android:name="FlashCardMainActivity"
		android:label="@string/app_name"
		android:screenOrientation="portrait"
		android:configChanges="orientation|keyboardHidden" >
	</activity>
	<activity
		android:name="FlashCardDisplayActivity"
		android:label="@string/flashcard_main_display_label" 
		android:screenOrientation="portrait"
		android:configChanges="orientation|keyboardHidden" >
	</activity>
	<activity
		android:name="MainMenuPrefsActivity"
		android:label="@string/title_main_preferences" 
		android:screenOrientation="portrait"
		android:configChanges="orientation|keyboardHidden" >
	</activity>

    </application>
</manifest> 
